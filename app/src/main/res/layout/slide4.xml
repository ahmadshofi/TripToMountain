<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_screen4">

    <TextView
        android:id="@+id/txtSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtJudulSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/perhatikan_asupan_makanan_sebelum_mendaki_gunung"
        android:textColor="@android:color/white"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtSatu"
        app:layout_constraintStart_toStartOf="@+id/txtSatu"
        app:layout_constraintTop_toBottomOf="@+id/txtSatu" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:text="@string/makanan_persiapan_naik_gunung_yang_ideal_seharusnya_mengandung_tinggi_karbohidrat_dan_protein_misalnya_telur_rebus_atau_seporsi_nasi_putih_hangat_dengan_lauk_daging_pilihan_anda_serta_sayuran_ini_adalah_pilihan_sarapan_yang_cerdas_sebelum_mendaki_gunung_dan_bawalah_persediaan_makanan_yang_cukup_ketika_melakukan_pendakian_yang_sesuai_dengan_beberapa_lama_pendaki"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtJudulSatu"
        app:layout_constraintStart_toStartOf="@+id/txtJudulSatu"
        app:layout_constraintTop_toBottomOf="@+id/txtJudulSatu" />



</androidx.constraintlayout.widget.ConstraintLayout>